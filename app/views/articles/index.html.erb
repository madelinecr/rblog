<% if admin_signed_in? %>
  <%= link_to "New Article", new_article_path, class: 'button' %>
<% end %>

<% @articles.each do |article| %>
  <div class="article">
    <h1><%= link_to article.title, article_path(article), class: 'article_title' %></h1>

    <% if article.header.present? %>
      <%= image_tag article.header.url(:standard) %>
    <% end %>

    <%= raw article.body_markdown %>
  </div>
<% end %>
