<div id="form">
  <%= nested_form_for @article, html: { multipart: true } do |f| %>
    <% if @article.errors.any? %>
      <div class="callout warning">
        <h4>
          <%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved.
        </h4>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, rows: 20 %>
    </p>

    <p>
      <%= f.label :header %>
      <%= f.file_field :header %>
    </p>
    <hr>

    <table style="width: 100%">
      <tr>
        <th>Preview</th>
        <th>Caption</th>
        <th>Upload</th>
        <th></th>
      </tr>
        <%= f.fields_for :photos do |photo| %>
          <tr>
            <td>
              <%= image_tag photo.object.photo.url(:thumb) if photo.object.photo.file? %>
            </td>

            <td>
              <%= photo.label :caption %>
              <%= photo.text_field :caption %>
            </td>

            <td>
              <%= photo.label :photo %>
              <%= photo.file_field :photo %>
            </td>

            <td>
              <%= photo.link_to_remove "Remove this photo" %>
            </td>
          </tr>
        <% end %>
    </table>
    <p>
      <%= f.link_to_add "Add a Photo", :photos %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
