<div id="form">
  <%= nested_form_for @article, html: { multipart: true } do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :header %>
      <%= f.file_field :header %>
    </p>

    <p>
      <%= f.fields_for :photos do |photo| %>
        <%= photo.label "New Photo" %>
        <%= photo.file_field :name %>
        <%= photo.link_to_remove "Remove this photo" %>
      <% end %>
      <%= f.link_to_add "Add a Photo", :photos %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
