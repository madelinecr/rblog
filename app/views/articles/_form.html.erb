<div id="form">
  <%= form_for @article, html: { multipart: true } do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :header %>
      <%= f.file_field :header %>
    </p>


    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
